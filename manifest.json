{
  "manifest_version":2,
  "name":"Unmobile",
  "version":"0.0.6",
  "update_url":"http://raw.githubusercontent.com/zlsa/unmobile/master/update.xml",

  "description":"Redirects to the non-mobile version of websites.",

  "icons": {
    "16":"assets/images/icon/16.png",
    "48":"assets/images/icon/48.png",
    "128":"assets/images/icon/128.png"
  },

  "background": {
    "scripts":[
      "assets/scripts/url.js",
      "assets/scripts/list.js",
      "assets/scripts/redirect.js",
      "assets/scripts/background.js"
    ],
    "persistent":false
  },

  "options_page":"options.html",

  "permissions":[
    "tabs",
    "http://raw.githubusercontent.com/zlsa/unmobile/master/redirect.json",
    "https://raw.githubusercontent.com/zlsa/unmobile/master/redirect.json"
  ]
}
